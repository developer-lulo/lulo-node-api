{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "target": "ES6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"]
  },
  "include": ["src/migrations", "src/config", "src/models", "src/seeders"]
}
